{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "test", "dist", "**/*.test.ts", "jest.config.ts"]
}